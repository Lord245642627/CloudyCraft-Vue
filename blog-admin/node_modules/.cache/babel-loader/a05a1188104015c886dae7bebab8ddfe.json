{"ast":null,"code":"import * as imageConversion from 'image-conversion';\nimport Editor from '@/components/Editor.vue';\nexport default {\n  components: {\n    Editor\n  },\n\n  created() {\n    if (this.$route.params.talkId) {\n      this.axios.get('/api/admin/talks/' + this.$route.params.talkId).then(({\n        data\n      }) => {\n        this.talk = data.data;\n\n        if (data.data.imgs) {\n          data.data.imgs.forEach(item => {\n            this.uploads.push({\n              url: item\n            });\n          });\n        }\n      });\n    }\n  },\n\n  data: function () {\n    return {\n      talk: {\n        id: null,\n        content: '',\n        isTop: 0,\n        isSecret: 1,\n        images: ''\n      },\n      status: [{\n        isSecret: 1,\n        desc: '公开'\n      }, {\n        isSecret: 2,\n        desc: '私密'\n      }],\n      uploads: [],\n      headers: {\n        Authorization: 'Bearer ' + sessionStorage.getItem('token')\n      }\n    };\n  },\n  methods: {\n    handleCommand(command) {\n      this.talk.isSecret = command;\n    },\n\n    handleRemove(file) {\n      this.uploads.forEach((item, index) => {\n        if (item.url == file.url) {\n          this.uploads.splice(index, 1);\n        }\n      });\n    },\n\n    upload(response) {\n      this.uploads.push({\n        url: response.data\n      });\n    },\n\n    beforeUpload(file) {\n      return new Promise(resolve => {\n        if (file.size / 1024 < this.config.UPLOAD_SIZE) {\n          resolve(file);\n        }\n\n        imageConversion.compressAccurately(file, this.config.UPLOAD_SIZE).then(res => {\n          resolve(res);\n        });\n      });\n    },\n\n    saveOrUpdateTalk() {\n      if (this.talk.content.trim() == '') {\n        this.$message.error('说说内容不能为空');\n        return false;\n      }\n\n      if (this.uploads.length > 0) {\n        var img = [];\n        this.uploads.forEach(item => {\n          img.push(item.url);\n        });\n        this.talk.images = JSON.stringify(img);\n      } else {\n        this.talk.images = '';\n      }\n\n      this.axios.post('/api/admin/talks', this.talk).then(({\n        data\n      }) => {\n        if (data.code === 0) {\n          this.$refs.editor.clear();\n          this.uploads = [];\n          this.$router.push({\n            path: '/talk-list'\n          });\n          this.$notify.success({\n            title: '成功',\n            message: data.message\n          });\n        } else {\n          this.$notify.error({\n            title: '失败',\n            // message: data.message\n            message: data.code\n          });\n        }\n      });\n    }\n\n  },\n  computed: {\n    dropdownTitle() {\n      var desc = '';\n      this.status.forEach(item => {\n        if (item.isSecret == this.talk.isSecret) {\n          desc = item.desc;\n        }\n      });\n      return desc;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAuDA;AACA;AACA;EACAA;IACAC;EADA,CADA;;EAIAC;IACA;MACA;QAAAC;MAAA;QACA;;QACA;UACAA;YACA;cAAAC;YAAA;UACA,CAFA;QAGA;MACA,CAPA;IAQA;EACA,CAfA;;EAgBAD;IACA;MACAE;QACAC,QADA;QAEAC,WAFA;QAGAC,QAHA;QAIAC,WAJA;QAKAC;MALA,CADA;MAQAC,SACA;QAAAF;QAAAG;MAAA,CADA,EAEA;QAAAH;QAAAG;MAAA,CAFA,CARA;MAYAC,WAZA;MAaAC;QAAAC;MAAA;IAbA;EAeA,CAhCA;EAiCAC;IACAC;MACA;IACA,CAHA;;IAIAC;MACA;QACA;UACA;QACA;MACA,CAJA;IAKA,CAVA;;IAWAC;MACA;QAAAf;MAAA;IACA,CAbA;;IAcAgB;MACA;QACA;UACAC;QACA;;QACAC;UACAD;QACA,CAFA;MAGA,CAPA;IAQA,CAvBA;;IAwBAE;MACA;QACA;QACA;MACA;;MACA;QACA;QACA;UACAC;QACA,CAFA;QAGA;MACA,CANA,MAMA;QACA;MACA;;MACA;QAAArB;MAAA;QACA;UACA;UACA;UACA;YAAAsB;UAAA;UACA;YACAC,WADA;YAEAC;UAFA;QAIA,CARA,MAQA;UACA;YACAD,WADA;YAEA;YACAC;UAHA;QAKA;MACA,CAhBA;IAiBA;;EAvDA,CAjCA;EA0FAC;IACAC;MACA;MACA;QACA;UACAjB;QACA;MACA,CAJA;MAKA;IACA;;EATA;AA1FA","names":["components","Editor","created","data","url","talk","id","content","isTop","isSecret","images","status","desc","uploads","headers","Authorization","methods","handleCommand","handleRemove","upload","beforeUpload","resolve","imageConversion","saveOrUpdateTalk","img","path","title","message","computed","dropdownTitle"],"sourceRoot":"src/views/talk","sources":["Talk.vue"],"sourcesContent":["<template>\n  <el-card class=\"main-card\">\n    <div class=\"title\">{{ this.$route.name }}</div>\n    <div class=\"talk-container\">\n      <Editor ref=\"editor\" class=\"editor-wrapper\" v-model=\"talk.content\" placeholder=\"说点什么吧\" />\n      <div class=\"operation-wrapper\">\n        <div class=\"left-wrapper\">\n          <el-upload\n            action=\"/api/admin/talks/images\"\n            multiple\n            :headers=\"headers\"\n            :before-upload=\"beforeUpload\"\n            :on-success=\"upload\"\n            :show-file-list=\"false\">\n            <i class=\"iconfont el-icon-mytupian operation-btn tupian\" />\n          </el-upload>\n        </div>\n        <div class=\"right-wrapper\">\n          <el-switch\n            style=\"margin-right: 16px\"\n            v-model=\"talk.isTop\"\n            inactive-text=\"置顶\"\n            :active-value=\"1\"\n            :inactive-value=\"0\" />\n          <el-dropdown trigger=\"click\" @command=\"handleCommand\" style=\"margin-right: 16px\">\n            <span class=\"talk-status\"> {{ dropdownTitle }}<i class=\"el-icon-arrow-down el-icon--right\" /> </span>\n            <el-dropdown-menu slot=\"dropdown\">\n              <el-dropdown-item v-for=\"(item, index) of status\" :key=\"index\" :command=\"item.status\">\n                {{ item.desc }}\n              </el-dropdown-item>\n            </el-dropdown-menu>\n          </el-dropdown>\n          <el-button type=\"primary\" size=\"small\" @click=\"saveOrUpdateTalk\" :disabled=\"talk.content == ''\">\n            发布\n          </el-button>\n        </div>\n      </div>\n      <el-upload\n        class=\"talk-image-upload\"\n        v-show=\"uploads.length > 0\"\n        action=\"/api/admin/talks/images\"\n        list-type=\"picture-card\"\n        multiple\n        :headers=\"headers\"\n        :file-list=\"uploads\"\n        :before-upload=\"beforeUpload\"\n        :on-success=\"upload\"\n        :on-remove=\"handleRemove\">\n        <i class=\"el-icon-plus\" />\n      </el-upload>\n    </div>\n  </el-card>\n</template>\n\n<script>\nimport * as imageConversion from 'image-conversion'\nimport Editor from '@/components/Editor.vue'\nexport default {\n  components: {\n    Editor\n  },\n  created() {\n    if (this.$route.params.talkId) {\n      this.axios.get('/api/admin/talks/' + this.$route.params.talkId).then(({ data }) => {\n        this.talk = data.data\n        if (data.data.imgs) {\n          data.data.imgs.forEach((item) => {\n            this.uploads.push({ url: item })\n          })\n        }\n      })\n    }\n  },\n  data: function () {\n    return {\n      talk: {\n        id: null,\n        content: '',\n        isTop: 0,\n        isSecret: 1,\n        images: ''\n      },\n      status: [\n        { isSecret: 1, desc: '公开' },\n        { isSecret: 2, desc: '私密' }\n      ],\n      uploads: [],\n      headers: { Authorization: 'Bearer ' + sessionStorage.getItem('token') }\n    }\n  },\n  methods: {\n    handleCommand(command) {\n      this.talk.isSecret = command\n    },\n    handleRemove(file) {\n      this.uploads.forEach((item, index) => {\n        if (item.url == file.url) {\n          this.uploads.splice(index, 1)\n        }\n      })\n    },\n    upload(response) {\n      this.uploads.push({ url: response.data })\n    },\n    beforeUpload(file) {\n      return new Promise((resolve) => {\n        if (file.size / 1024 < this.config.UPLOAD_SIZE) {\n          resolve(file)\n        }\n        imageConversion.compressAccurately(file, this.config.UPLOAD_SIZE).then((res) => {\n          resolve(res)\n        })\n      })\n    },\n    saveOrUpdateTalk() {\n      if (this.talk.content.trim() == '') {\n        this.$message.error('说说内容不能为空')\n        return false\n      }\n      if (this.uploads.length > 0) {\n        var img = []\n        this.uploads.forEach((item) => {\n          img.push(item.url)\n        })\n        this.talk.images = JSON.stringify(img)\n      } else {\n        this.talk.images = ''\n      }\n      this.axios.post('/api/admin/talks', this.talk).then(({ data }) => {\n        if (data.code === 0) {\n          this.$refs.editor.clear()\n          this.uploads = []\n          this.$router.push({ path: '/talk-list' })\n          this.$notify.success({\n            title: '成功',\n            message: data.message\n          })\n        } else {\n          this.$notify.error({\n            title: '失败',\n            // message: data.message\n            message: data.code\n          })\n        }\n      })\n    }\n  },\n  computed: {\n    dropdownTitle() {\n      var desc = ''\n      this.status.forEach((item) => {\n        if (item.isSecret == this.talk.isSecret) {\n          desc = item.desc\n        }\n      })\n      return desc\n    }\n  }\n}\n</script>\n\n<style scoped>\n.tupian {\n  margin-left: 3px;\n}\n.talk-container {\n  margin-top: 40px;\n}\n.editor-wrapper {\n  min-height: 150px;\n}\n.operation-wrapper {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  margin-top: 16px;\n}\n.operation-btn {\n  cursor: pointer;\n  color: #838383;\n  font-size: 20px;\n  margin-right: 12px;\n}\n.talk-status {\n  cursor: pointer;\n  font-size: 12px;\n  color: #999;\n}\n.emoji {\n  user-select: none;\n  margin: 0.25rem;\n  display: inline-block;\n  vertical-align: middle;\n}\n.emoji-item {\n  cursor: pointer;\n  display: inline-block;\n}\n.emoji-item:hover {\n  transition: all 0.2s;\n  border-radius: 0.25rem;\n  background: #dddddd;\n}\n.left-wrapper {\n  display: flex;\n  width: 50%;\n}\n.talk-image-upload {\n  margin-top: 8px;\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}