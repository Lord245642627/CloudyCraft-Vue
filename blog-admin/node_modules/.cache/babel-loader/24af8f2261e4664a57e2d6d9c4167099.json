{"ast":null,"code":"export default {\n  created() {\n    this.current = this.$store.state.pageState.articleList;\n    this.listArticles();\n    this.listCategories();\n    this.listTags();\n  },\n\n  data: function () {\n    return {\n      uploadHeaders: {\n        Authorization: 'Bearer ' + sessionStorage.getItem('token')\n      },\n      loading: true,\n      updateIsDelete: false,\n      remove: false,\n      types: [{\n        value: 1,\n        label: '原创'\n      }, {\n        value: 2,\n        label: '转载'\n      }, {\n        value: 3,\n        label: '翻译'\n      }],\n      activeStatus: 'all',\n      articles: [],\n      articleIds: [],\n      categories: [],\n      tags: [],\n      keywords: null,\n      type: null,\n      categoryId: null,\n      tagId: null,\n      isDelete: 0,\n      isExport: false,\n      status: null,\n      current: 1,\n      size: 10,\n      count: 0\n    };\n  },\n  methods: {\n    selectionChange(articles) {\n      this.articleIds = [];\n      articles.forEach(item => {\n        this.articleIds.push(item.id);\n      });\n    },\n\n    searchArticles() {\n      this.current = 1;\n      this.listArticles();\n    },\n\n    editArticle(id) {\n      this.$router.push({\n        path: '/articles/' + id\n      });\n    },\n\n    updateArticleDelete(id) {\n      let param = {};\n\n      if (id != null) {\n        param.ids = [id];\n      } else {\n        param.ids = this.articleIds;\n      }\n\n      param.isDelete = this.isDelete == 0 ? 1 : 0;\n      this.axios.put('/api/admin/articles', param).then(({\n        data\n      }) => {\n        if (data.code === 0) {\n          this.$notify.success({\n            title: '成功',\n            message: data.message\n          });\n          this.listArticles();\n        } else {\n          this.$notify.error({\n            title: '失败',\n            message: data.message\n          });\n        }\n\n        this.updateIsDelete = false;\n      });\n    },\n\n    deleteArticles(id) {\n      let param = {};\n\n      if (id == null) {\n        param = {\n          data: this.articleIds\n        };\n      } else {\n        param = {\n          data: [id]\n        };\n      }\n\n      this.axios.delete('/api/admin/articles/delete', param).then(({\n        data\n      }) => {\n        if (data.code === 0) {\n          this.$notify.success({\n            title: '成功',\n            message: data.message\n          });\n          this.listArticles();\n        } else {\n          this.$notify.error({\n            title: '失败',\n            message: data.message\n          });\n        }\n\n        this.remove = false;\n      });\n    },\n\n    exportArticles(id) {\n      var param = {};\n\n      if (id == null) {\n        param = this.articleIds;\n      } else {\n        param = [id];\n      }\n\n      this.axios.post('/api/admin/articles/export', param).then(({\n        data\n      }) => {\n        if (data.code === 0) {\n          this.$notify.success({\n            title: '成功',\n            message: data.message\n          });\n          data.data.forEach(item => {\n            this.downloadFile(item);\n          });\n          this.listArticles();\n        } else {\n          this.$notify.error({\n            title: '失败',\n            message: data.message\n          });\n        }\n\n        this.isExport = false;\n      });\n    },\n\n    downloadFile(url) {\n      const iframe = document.createElement('iframe');\n      iframe.style.display = 'none';\n      iframe.style.height = 0;\n      iframe.src = url;\n      document.body.appendChild(iframe);\n      setTimeout(() => {\n        iframe.remove();\n      }, 5 * 60 * 1000);\n    },\n\n    uploadArticle(data) {\n      if (data.code === 0) {\n        this.$notify.success({\n          title: '成功',\n          message: '导入成功'\n        });\n        this.listArticles();\n      } else {\n        this.$notify.error({\n          title: '失败',\n          message: data.message\n        });\n      }\n    },\n\n    sizeChange(size) {\n      this.size = size;\n      this.listArticles();\n    },\n\n    currentChange(current) {\n      this.current = current;\n      this.$store.commit('updateArticleListPageState', current);\n      this.listArticles();\n    },\n\n    changeStatus(status) {\n      switch (status) {\n        case 'all':\n          this.isDelete = 0;\n          this.status = null;\n          break;\n\n        case 'public':\n          this.isDelete = 0;\n          this.status = 1;\n          break;\n\n        case 'private':\n          this.isDelete = 0;\n          this.status = 2;\n          break;\n\n        case 'draft':\n          this.isDelete = 0;\n          this.status = 3;\n          break;\n\n        case 'delete':\n          this.isDelete = 1;\n          this.status = null;\n          break;\n      }\n\n      this.current = 1;\n      this.activeStatus = status;\n    },\n\n    changeTopAndFeatured(article) {\n      this.axios.put('/api/admin/articles/topAndFeatured', {\n        id: article.id,\n        isTop: article.isTop,\n        isFeatured: article.isFeatured\n      }).then(({\n        data\n      }) => {\n        if (data.code === 0) {\n          this.$notify.success({\n            title: '成功',\n            message: '修改成功'\n          });\n        } else {\n          this.$notify.error({\n            title: '失败',\n            message: data.message\n          });\n        }\n\n        this.remove = false;\n      });\n    },\n\n    listArticles() {\n      this.axios.get('/api/admin/articles', {\n        params: {\n          current: this.current,\n          size: this.size,\n          keywords: this.keywords,\n          categoryId: this.categoryId,\n          status: this.status,\n          tagId: this.tagId,\n          type: this.type,\n          isDelete: this.isDelete\n        }\n      }).then(({\n        data\n      }) => {\n        this.articles = data.data.records;\n        this.total = data.data.total;\n        this.loading = false;\n      });\n    },\n\n    listCategories() {\n      this.axios.get('/api/admin/categories/search').then(({\n        data\n      }) => {\n        this.categories = data.data;\n      });\n    },\n\n    listTags() {\n      this.axios.get('/api/admin/tags/search').then(({\n        data\n      }) => {\n        this.tags = data.data;\n      });\n    }\n\n  },\n  watch: {\n    type() {\n      this.current = 1;\n      this.listArticles();\n    },\n\n    categoryId() {\n      this.current = 1;\n      this.listArticles();\n    },\n\n    tagId() {\n      this.current = 1;\n      this.listArticles();\n    },\n\n    status() {\n      this.current = 1;\n      this.listArticles();\n    },\n\n    isDelete() {\n      this.current = 1;\n      this.listArticles();\n    }\n\n  },\n  computed: {\n    articleType() {\n      return function (type) {\n        var tagType = '';\n        var name = '';\n\n        switch (type) {\n          case 1:\n            tagType = 'danger';\n            name = '原创';\n            break;\n\n          case 2:\n            tagType = 'success';\n            name = '转载';\n            break;\n\n          case 3:\n            tagType = 'primary';\n            name = '翻译';\n            break;\n        }\n\n        return {\n          tagType: tagType,\n          name: name\n        };\n      };\n    },\n\n    isActive() {\n      return function (status) {\n        return this.activeStatus == status ? 'active-status' : 'status';\n      };\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAmOA;EACAA;IACA;IACA;IACA;IACA;EACA,CANA;;EAOAC;IACA;MACAC;QAAAC;MAAA,CADA;MAEAC,aAFA;MAGAC,qBAHA;MAIAC,aAJA;MAKAC,QACA;QACAC,QADA;QAEAC;MAFA,CADA,EAKA;QACAD,QADA;QAEAC;MAFA,CALA,EASA;QACAD,QADA;QAEAC;MAFA,CATA,CALA;MAmBAC,mBAnBA;MAoBAC,YApBA;MAqBAC,cArBA;MAsBAC,cAtBA;MAuBAC,QAvBA;MAwBAC,cAxBA;MAyBAC,UAzBA;MA0BAC,gBA1BA;MA2BAC,WA3BA;MA4BAC,WA5BA;MA6BAC,eA7BA;MA8BAC,YA9BA;MA+BAC,UA/BA;MAgCAC,QAhCA;MAiCAC;IAjCA;EAmCA,CA3CA;EA4CAC;IACAC;MACA;MACAf;QACA;MACA,CAFA;IAGA,CANA;;IAOAgB;MACA;MACA;IACA,CAVA;;IAWAC;MACA;QAAAC;MAAA;IACA,CAbA;;IAcAC;MACA;;MACA;QACAC;MACA,CAFA,MAEA;QACAA;MACA;;MACAA;MACA;QAAA9B;MAAA;QACA;UACA;YACA+B,WADA;YAEAC;UAFA;UAIA;QACA,CANA,MAMA;UACA;YACAD,WADA;YAEAC;UAFA;QAIA;;QACA;MACA,CAdA;IAeA,CArCA;;IAsCAC;MACA;;MACA;QACAH;UAAA9B;QAAA;MACA,CAFA,MAEA;QACA8B;UAAA9B;QAAA;MACA;;MACA;QAAAA;MAAA;QACA;UACA;YACA+B,WADA;YAEAC;UAFA;UAIA;QACA,CANA,MAMA;UACA;YACAD,WADA;YAEAC;UAFA;QAIA;;QACA;MACA,CAdA;IAeA,CA5DA;;IA6DAE;MACA;;MACA;QACAJ;MACA,CAFA,MAEA;QACAA;MACA;;MACA;QAAA9B;MAAA;QACA;UACA;YACA+B,WADA;YAEAC;UAFA;UAIAhC;YACA;UACA,CAFA;UAGA;QACA,CATA,MASA;UACA;YACA+B,WADA;YAEAC;UAFA;QAIA;;QACA;MACA,CAjBA;IAkBA,CAtFA;;IAuFAG;MACA;MACAC;MACAA;MACAA;MACAC;MACAC;QACAF;MACA,CAFA,EAEA,aAFA;IAGA,CAhGA;;IAiGAG;MACA;QACA;UACAR,WADA;UAEAC;QAFA;QAIA;MACA,CANA,MAMA;QACA;UACAD,WADA;UAEAC;QAFA;MAIA;IACA,CA9GA;;IA+GAQ;MACA;MACA;IACA,CAlHA;;IAmHAC;MACA;MACA;MACA;IACA,CAvHA;;IAwHAC;MACA;QACA;UACA;UACA;UACA;;QACA;UACA;UACA;UACA;;QACA;UACA;UACA;UACA;;QACA;UACA;UACA;UACA;;QACA;UACA;UACA;UACA;MApBA;;MAsBA;MACA;IACA,CAjJA;;IAkJAC;MACA,WACAC,GADA,CACA,oCADA,EACA;QACAC,cADA;QAEAC,oBAFA;QAGAC;MAHA,CADA,EAMAC,IANA,CAMA;QAAAhD;MAAA;QACA;UACA;YACA+B,WADA;YAEAC;UAFA;QAIA,CALA,MAKA;UACA;YACAD,WADA;YAEAC;UAFA;QAIA;;QACA;MACA,CAnBA;IAoBA,CAvKA;;IAwKAiB;MACA,WACAC,GADA,CACA,qBADA,EACA;QACAC;UACA9B,qBADA;UAEAC,eAFA;UAGAR,uBAHA;UAIAE,2BAJA;UAKAI,mBALA;UAMAH,iBANA;UAOAF,eAPA;UAQAG;QARA;MADA,CADA,EAaA8B,IAbA,CAaA;QAAAhD;MAAA;QACA;QACA;QACA;MACA,CAjBA;IAkBA,CA3LA;;IA4LAoD;MACA;QAAApD;MAAA;QACA;MACA,CAFA;IAGA,CAhMA;;IAiMAqD;MACA;QAAArD;MAAA;QACA;MACA,CAFA;IAGA;;EArMA,CA5CA;EAmPAsD;IACAvC;MACA;MACA;IACA,CAJA;;IAKAC;MACA;MACA;IACA,CARA;;IASAC;MACA;MACA;IACA,CAZA;;IAaAG;MACA;MACA;IACA,CAhBA;;IAiBAF;MACA;MACA;IACA;;EApBA,CAnPA;EAyQAqC;IACAC;MACA;QACA;QACA;;QACA;UACA;YACAC;YACAC;YACA;;UACA;YACAD;YACAC;YACA;;UACA;YACAD;YACAC;YACA;QAZA;;QAcA;UACAD,gBADA;UAEAC;QAFA;MAIA,CArBA;IAsBA,CAxBA;;IAyBAC;MACA;QACA;MACA,CAFA;IAGA;;EA7BA;AAzQA","names":["created","data","uploadHeaders","Authorization","loading","updateIsDelete","remove","types","value","label","activeStatus","articles","articleIds","categories","tags","keywords","type","categoryId","tagId","isDelete","isExport","status","current","size","count","methods","selectionChange","searchArticles","editArticle","path","updateArticleDelete","param","title","message","deleteArticles","exportArticles","downloadFile","iframe","document","setTimeout","uploadArticle","sizeChange","currentChange","changeStatus","changeTopAndFeatured","put","id","isTop","isFeatured","then","listArticles","get","params","listCategories","listTags","watch","computed","articleType","tagType","name","isActive"],"sourceRoot":"src/views/article","sources":["ArticleList.vue"],"sourcesContent":["<template>\n  <el-card class=\"main-card\">\n    <div class=\"title\">{{ this.$route.name }}</div>\n    <div class=\"article-status-menu\">\n      <span>状态</span>\n      <span @click=\"changeStatus('all')\" :class=\"isActive('all')\">全部</span>\n      <span @click=\"changeStatus('public')\" :class=\"isActive('public')\"> 公开 </span>\n      <span @click=\"changeStatus('private')\" :class=\"isActive('private')\"> 私密 </span>\n      <span @click=\"changeStatus('draft')\" :class=\"isActive('draft')\"> 草稿箱 </span>\n      <span @click=\"changeStatus('delete')\" :class=\"isActive('delete')\"> 回收站 </span>\n    </div>\n    <div class=\"operation-container\">\n      <el-button\n        v-if=\"isDelete == 0\"\n        type=\"danger\"\n        size=\"small\"\n        icon=\"el-icon-delete\"\n        :disabled=\"articleIds.length == 0\"\n        @click=\"updateIsDelete = true\">\n        批量删除\n      </el-button>\n      <el-button\n        v-else\n        type=\"danger\"\n        size=\"small\"\n        icon=\"el-icon-delete\"\n        :disabled=\"articleIds.length == 0\"\n        @click=\"remove = true\">\n        批量删除\n      </el-button>\n      <el-button\n        type=\"success\"\n        size=\"small\"\n        icon=\"el-icon-download\"\n        :disabled=\"articleIds.length == 0\"\n        style=\"margin-right: 1rem\"\n        @click=\"isExport = true\">\n        批量导出\n      </el-button>\n      <el-upload\n        action=\"/api/admin/articles/import\"\n        multiple\n        :limit=\"9\"\n        :show-file-list=\"false\"\n        :headers=\"uploadHeaders\"\n        :on-success=\"uploadArticle\">\n        <el-button type=\"primary\" size=\"small\" icon=\"el-icon-upload\"> 批量导入 </el-button>\n      </el-upload>\n      <div style=\"margin-left: auto\">\n        <el-select\n          clearable\n          v-model=\"type\"\n          placeholder=\"请选择文章类型\"\n          size=\"small\"\n          style=\"margin-right: 1rem; width: 180px\">\n          <el-option label=\"全部\" value=\"\" />\n          <el-option v-for=\"item in types\" :key=\"item.value\" :label=\"item.label\" :value=\"item.value\" />\n        </el-select>\n        <el-select\n          clearable\n          size=\"small\"\n          v-model=\"categoryId\"\n          filterable\n          placeholder=\"请选择分类\"\n          style=\"margin-right: 1rem; width: 180px\">\n          <el-option label=\"全部\" value=\"\" />\n          <el-option v-for=\"item in categories\" :key=\"item.id\" :label=\"item.categoryName\" :value=\"item.id\" />\n        </el-select>\n        <el-select\n          clearable\n          size=\"small\"\n          v-model=\"tagId\"\n          filterable\n          placeholder=\"请选择标签\"\n          style=\"margin-right: 1rem; width: 180px\">\n          <el-option label=\"全部\" value=\"\" />\n          <el-option v-for=\"item in tags\" :key=\"item.id\" :label=\"item.tagName\" :value=\"item.id\" />\n        </el-select>\n        <el-input\n          clearable\n          v-model=\"keywords\"\n          prefix-icon=\"el-icon-search\"\n          size=\"small\"\n          placeholder=\"请输入文章名\"\n          style=\"width: 200px\"\n          @keyup.enter.native=\"searchArticles\" />\n        <el-button type=\"primary\" size=\"small\" icon=\"el-icon-search\" style=\"margin-left: 1rem\" @click=\"searchArticles\">\n          搜索\n        </el-button>\n      </div>\n    </div>\n    <el-table border :data=\"articles\" @selection-change=\"selectionChange\" v-loading=\"loading\">\n      <el-table-column type=\"selection\" width=\"55\" />\n      <el-table-column prop=\"articleCover\" label=\"文章封面\" width=\"180\" align=\"center\">\n        <template slot-scope=\"scope\">\n          <el-image\n            class=\"article-cover\"\n            :src=\"\n              scope.row.articleCover\n                ? scope.row.articleCover\n                : 'https://static.talkxj.com/articles/c5cc2b2561bd0e3060a500198a4ad37d.png'\n            \" />\n          <i v-if=\"scope.row.status == 1\" class=\"iconfont el-icon-mygongkai article-status-icon\" />\n          <i v-if=\"scope.row.status == 2\" class=\"iconfont el-icon-mymima article-status-icon\" />\n          <i v-if=\"scope.row.status == 3\" class=\"iconfont el-icon-mycaogaoxiang article-status-icon\" />\n        </template>\n      </el-table-column>\n      <el-table-column prop=\"articleTitle\" label=\"标题\" align=\"center\" />\n      <el-table-column prop=\"categoryName\" label=\"分类\" width=\"110\" align=\"center\" />\n      <el-table-column prop=\"tagDTOs\" label=\"标签\" width=\"170\" align=\"center\">\n        <template slot-scope=\"scope\">\n          <el-tag v-for=\"item of scope.row.tagDTOs\" :key=\"item.tagId\" style=\"margin-right: 0.2rem; margin-top: 0.2rem\">\n            {{ item.tagName }}\n          </el-tag>\n        </template>\n      </el-table-column>\n      <el-table-column prop=\"viewsCount\" label=\"浏览量\" width=\"70\" align=\"center\">\n        <template slot-scope=\"scope\">\n          <span v-if=\"scope.row.viewsCount\">\n            {{ scope.row.viewsCount }}\n          </span>\n          <span v-else>0</span>\n        </template>\n      </el-table-column>\n      <el-table-column prop=\"type\" label=\"类型\" width=\"80\" align=\"center\">\n        <template slot-scope=\"scope\">\n          <el-tag :type=\"articleType(scope.row.type).tagType\">\n            {{ articleType(scope.row.type).name }}\n          </el-tag>\n        </template>\n      </el-table-column>\n      <el-table-column prop=\"createTime\" label=\"发表时间\" width=\"130\" align=\"center\">\n        <template slot-scope=\"scope\">\n          <i class=\"el-icon-time\" style=\"margin-right: 5px\" />\n          {{ scope.row.createTime | date }}\n        </template>\n      </el-table-column>\n      <el-table-column prop=\"isTop\" label=\"置顶\" width=\"80\" align=\"center\">\n        <template slot-scope=\"scope\">\n          <el-switch\n            v-model=\"scope.row.isTop\"\n            active-color=\"#13ce66\"\n            inactive-color=\"#F4F4F5\"\n            :disabled=\"scope.row.isDelete == 1\"\n            :active-value=\"1\"\n            :inactive-value=\"0\"\n            @change=\"changeTopAndFeatured(scope.row)\" />\n        </template>\n      </el-table-column>\n      <el-table-column prop=\"isFeatured\" label=\"推荐\" width=\"80\" align=\"center\">\n        <template slot-scope=\"scope\">\n          <el-switch\n            v-model=\"scope.row.isFeatured\"\n            active-color=\"#13ce66\"\n            inactive-color=\"#F4F4F5\"\n            :disabled=\"scope.row.isDelete == 1\"\n            :active-value=\"1\"\n            :inactive-value=\"0\"\n            @change=\"changeTopAndFeatured(scope.row)\" />\n        </template>\n      </el-table-column>\n      <el-table-column label=\"操作\" align=\"center\" width=\"150\">\n        <template slot-scope=\"scope\">\n          <el-button type=\"primary\" size=\"mini\" @click=\"editArticle(scope.row.id)\" v-if=\"scope.row.isDelete == 0\">\n            编辑\n          </el-button>\n          <el-popconfirm\n            title=\"确定删除吗？\"\n            style=\"margin-left: 10px\"\n            @confirm=\"updateArticleDelete(scope.row.id)\"\n            v-if=\"scope.row.isDelete == 0\">\n            <el-button size=\"mini\" type=\"danger\" slot=\"reference\"> 删除 </el-button>\n          </el-popconfirm>\n          <el-popconfirm\n            title=\"确定恢复吗？\"\n            v-if=\"scope.row.isDelete == 1\"\n            @confirm=\"updateArticleDelete(scope.row.id)\">\n            <el-button size=\"mini\" type=\"success\" slot=\"reference\"> 恢复 </el-button>\n          </el-popconfirm>\n          <el-popconfirm\n            style=\"margin-left: 10px\"\n            v-if=\"scope.row.isDelete == 1\"\n            title=\"确定彻底删除吗？\"\n            @confirm=\"deleteArticles(scope.row.id)\">\n            <el-button size=\"mini\" type=\"danger\" slot=\"reference\"> 删除 </el-button>\n          </el-popconfirm>\n        </template>\n      </el-table-column>\n    </el-table>\n    <el-pagination\n      class=\"pagination-container\"\n      background\n      @size-change=\"sizeChange\"\n      @current-change=\"currentChange\"\n      :current-page=\"current\"\n      :page-size=\"size\"\n      :total=\"total\"\n      :page-sizes=\"[10, 20]\"\n      layout=\"total, sizes, prev, pager, next, jumper\" />\n    <el-dialog :visible.sync=\"updateIsDelete\" width=\"30%\">\n      <div class=\"dialog-title-container\" slot=\"title\"><i class=\"el-icon-warning\" style=\"color: #ff9900\" />提示</div>\n      <div style=\"font-size: 1rem\">是否删除选中项？</div>\n      <div slot=\"footer\">\n        <el-button @click=\"updateIsDelete = false\">取 消</el-button>\n        <el-button type=\"primary\" @click=\"updateArticleDelete(null)\"> 确 定 </el-button>\n      </div>\n    </el-dialog>\n    <el-dialog :visible.sync=\"remove\" width=\"30%\">\n      <div class=\"dialog-title-container\" slot=\"title\"><i class=\"el-icon-warning\" style=\"color: #ff9900\" />提示</div>\n      <div style=\"font-size: 1rem\">是否彻底删除选中项？</div>\n      <div slot=\"footer\">\n        <el-button @click=\"remove = false\">取 消</el-button>\n        <el-button type=\"primary\" @click=\"deleteArticles(null)\"> 确 定 </el-button>\n      </div>\n    </el-dialog>\n    <el-dialog :visible.sync=\"isExport\" width=\"30%\">\n      <div class=\"dialog-title-container\" slot=\"title\"><i class=\"el-icon-warning\" style=\"color: #ff9900\" />提示</div>\n      <div style=\"font-size: 1rem\">是否导出选中文章？</div>\n      <div slot=\"footer\">\n        <el-button @click=\"isExport = false\">取 消</el-button>\n        <el-button type=\"primary\" @click=\"exportArticles(null)\"> 确 定 </el-button>\n      </div>\n    </el-dialog>\n  </el-card>\n</template>\n\n<script>\nexport default {\n  created() {\n    this.current = this.$store.state.pageState.articleList\n    this.listArticles()\n    this.listCategories()\n    this.listTags()\n  },\n  data: function () {\n    return {\n      uploadHeaders: { Authorization: 'Bearer ' + sessionStorage.getItem('token') },\n      loading: true,\n      updateIsDelete: false,\n      remove: false,\n      types: [\n        {\n          value: 1,\n          label: '原创'\n        },\n        {\n          value: 2,\n          label: '转载'\n        },\n        {\n          value: 3,\n          label: '翻译'\n        }\n      ],\n      activeStatus: 'all',\n      articles: [],\n      articleIds: [],\n      categories: [],\n      tags: [],\n      keywords: null,\n      type: null,\n      categoryId: null,\n      tagId: null,\n      isDelete: 0,\n      isExport: false,\n      status: null,\n      current: 1,\n      size: 10,\n      count: 0\n    }\n  },\n  methods: {\n    selectionChange(articles) {\n      this.articleIds = []\n      articles.forEach((item) => {\n        this.articleIds.push(item.id)\n      })\n    },\n    searchArticles() {\n      this.current = 1\n      this.listArticles()\n    },\n    editArticle(id) {\n      this.$router.push({ path: '/articles/' + id })\n    },\n    updateArticleDelete(id) {\n      let param = {}\n      if (id != null) {\n        param.ids = [id]\n      } else {\n        param.ids = this.articleIds\n      }\n      param.isDelete = this.isDelete == 0 ? 1 : 0\n      this.axios.put('/api/admin/articles', param).then(({ data }) => {\n        if (data.code === 0) {\n          this.$notify.success({\n            title: '成功',\n            message: data.message\n          })\n          this.listArticles()\n        } else {\n          this.$notify.error({\n            title: '失败',\n            message: data.message\n          })\n        }\n        this.updateIsDelete = false\n      })\n    },\n    deleteArticles(id) {\n      let param = {}\n      if (id == null) {\n        param = { data: this.articleIds }\n      } else {\n        param = { data: [id] }\n      }\n      this.axios.delete('/api/admin/articles/delete', param).then(({ data }) => {\n        if (data.code === 0) {\n          this.$notify.success({\n            title: '成功',\n            message: data.message\n          })\n          this.listArticles()\n        } else {\n          this.$notify.error({\n            title: '失败',\n            message: data.message\n          })\n        }\n        this.remove = false\n      })\n    },\n    exportArticles(id) {\n      var param = {}\n      if (id == null) {\n        param = this.articleIds\n      } else {\n        param = [id]\n      }\n      this.axios.post('/api/admin/articles/export', param).then(({ data }) => {\n        if (data.code === 0) {\n          this.$notify.success({\n            title: '成功',\n            message: data.message\n          })\n          data.data.forEach((item) => {\n            this.downloadFile(item)\n          })\n          this.listArticles()\n        } else {\n          this.$notify.error({\n            title: '失败',\n            message: data.message\n          })\n        }\n        this.isExport = false\n      })\n    },\n    downloadFile(url) {\n      const iframe = document.createElement('iframe')\n      iframe.style.display = 'none'\n      iframe.style.height = 0\n      iframe.src = url\n      document.body.appendChild(iframe)\n      setTimeout(() => {\n        iframe.remove()\n      }, 5 * 60 * 1000)\n    },\n    uploadArticle(data) {\n      if (data.code === 0) {\n        this.$notify.success({\n          title: '成功',\n          message: '导入成功'\n        })\n        this.listArticles()\n      } else {\n        this.$notify.error({\n          title: '失败',\n          message: data.message\n        })\n      }\n    },\n    sizeChange(size) {\n      this.size = size\n      this.listArticles()\n    },\n    currentChange(current) {\n      this.current = current\n      this.$store.commit('updateArticleListPageState', current)\n      this.listArticles()\n    },\n    changeStatus(status) {\n      switch (status) {\n        case 'all':\n          this.isDelete = 0\n          this.status = null\n          break\n        case 'public':\n          this.isDelete = 0\n          this.status = 1\n          break\n        case 'private':\n          this.isDelete = 0\n          this.status = 2\n          break\n        case 'draft':\n          this.isDelete = 0\n          this.status = 3\n          break\n        case 'delete':\n          this.isDelete = 1\n          this.status = null\n          break\n      }\n      this.current = 1\n      this.activeStatus = status\n    },\n    changeTopAndFeatured(article) {\n      this.axios\n        .put('/api/admin/articles/topAndFeatured', {\n          id: article.id,\n          isTop: article.isTop,\n          isFeatured: article.isFeatured\n        })\n        .then(({ data }) => {\n          if (data.code === 0) {\n            this.$notify.success({\n              title: '成功',\n              message: '修改成功'\n            })\n          } else {\n            this.$notify.error({\n              title: '失败',\n              message: data.message\n            })\n          }\n          this.remove = false\n        })\n    },\n    listArticles() {\n      this.axios\n        .get('/api/admin/articles', {\n          params: {\n            current: this.current,\n            size: this.size,\n            keywords: this.keywords,\n            categoryId: this.categoryId,\n            status: this.status,\n            tagId: this.tagId,\n            type: this.type,\n            isDelete: this.isDelete\n          }\n        })\n        .then(({ data }) => {\n          this.articles = data.data.records\n          this.total = data.data.total\n          this.loading = false\n        })\n    },\n    listCategories() {\n      this.axios.get('/api/admin/categories/search').then(({ data }) => {\n        this.categories = data.data\n      })\n    },\n    listTags() {\n      this.axios.get('/api/admin/tags/search').then(({ data }) => {\n        this.tags = data.data\n      })\n    }\n  },\n  watch: {\n    type() {\n      this.current = 1\n      this.listArticles()\n    },\n    categoryId() {\n      this.current = 1\n      this.listArticles()\n    },\n    tagId() {\n      this.current = 1\n      this.listArticles()\n    },\n    status() {\n      this.current = 1\n      this.listArticles()\n    },\n    isDelete() {\n      this.current = 1\n      this.listArticles()\n    }\n  },\n  computed: {\n    articleType() {\n      return function (type) {\n        var tagType = ''\n        var name = ''\n        switch (type) {\n          case 1:\n            tagType = 'danger'\n            name = '原创'\n            break\n          case 2:\n            tagType = 'success'\n            name = '转载'\n            break\n          case 3:\n            tagType = 'primary'\n            name = '翻译'\n            break\n        }\n        return {\n          tagType: tagType,\n          name: name\n        }\n      }\n    },\n    isActive() {\n      return function (status) {\n        return this.activeStatus == status ? 'active-status' : 'status'\n      }\n    }\n  }\n}\n</script>\n\n<style scoped>\n.operation-container {\n  margin-top: 1.5rem;\n}\n.article-status-menu {\n  font-size: 14px;\n  margin-top: 40px;\n  color: #999;\n}\n.article-status-menu span {\n  margin-right: 24px;\n}\n.status {\n  cursor: pointer;\n}\n.active-status {\n  cursor: pointer;\n  color: #333;\n  font-weight: bold;\n}\n.article-cover {\n  position: relative;\n  width: 100%;\n  height: 90px;\n  border-radius: 4px;\n}\n.article-cover::after {\n  content: '';\n  background: rgba(0, 0, 0, 0.3);\n  position: absolute;\n  top: 0;\n  bottom: 0;\n  left: 0;\n  right: 0;\n}\n.article-status-icon {\n  color: #fff;\n  font-size: 1.5rem;\n  position: absolute;\n  right: 1rem;\n  bottom: 1.4rem;\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}